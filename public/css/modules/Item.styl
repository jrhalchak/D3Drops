.Item
  &-imageContainer
    width: 64px
    height: 64px
    position: relative
    float: left
  &-imageBackground
    border-radius: 4px
    position: absolute
    top: 50%
    left: 50%
    margin-top: -20px
    margin-left: -20px
    width: 40px
    height: 40px
    z-index: 1
    &--orange
      border: 1px solid orange
      background: rgba(242,157,0,0.6)
      box-shadow: inset 0 20px 40px rgba(0,0,0,0.3), 0 0 15px 0 rgba(0,0,0,0.3)
    &--green
      border: 1px solid green
      background: rgba(0,122,0,0.6)
      box-shadow: inset 0 20px 40px rgba(0,0,0,0.3)
  &-image
    z-index: 2
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    background-position: center center
    background-repeat: no-repeat
  &-title
    font-family: serifFamily
    font-weight: 900
  &-titleLabel
    display: inline-block
    max-width: 90%
    height: 1em
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
  &-titleIcon
    font-size: 80%
    margin-left: 5px
    color: #eee
  &-itemDescription
    margin-top: 10px
    margin-left: 65px
    margin-right: 5px
  &-label
    font-family: serifFamily
    font-style: italic
    font-weight: bold

.D3TableContainer-tableRow--expanded .Item
  background: #252017
  border: 1px solid lighten(#252017, 10%)
  box-shadow: inset 0 0 10px 0 rgba(0,0,0,0.5)
  &-imageContainer
    width: 60px
    height: 144px
    position: relative
    float: left
    margin-left: 10px
    margin-right: 10px
  &-imageBackground
    border-radius: 4px
    position: absolute
    top: 50%
    left: 50%
    margin-top: -60px
    margin-left: -30px
    width: 60px
    height: 120px
    z-index: 1
  &-title
    font-family: serifFamily
    font-weight: 900
  &-titleLabel
    display: inline
    max-width: 100%
    height: auto
    overflow: visible
    white-space: normal
    text-overflow: clip
  &-titleIcon
    font-size: 80%
    margin-left: 5px
    color: #eee
  &-itemDescription
    margin-left: 85px
  &-label
    clear: both
  &-value
    float: right
    clear: right
    margin-right: 10px
  &-requiredLevel
    display: inline-block
    border-radius: 50%
    width: 30px
    height: 30px
    line-height: 30px
    text-align: center
    background: #171717
    font-weight: bold
  &-DPSDefense
    font-size: 200%
    font-family: serifFamily
  &-DPSDefenseLabel
    font-size: 12px
    font-family: sansFamily
